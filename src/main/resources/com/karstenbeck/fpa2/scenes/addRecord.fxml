          maxHeight="-Infinity"
          maxWidth="-Infinity"
          minHeight="-Infinity"
          minWidth="-Infinity"
          prefHeight="550.0"
          prefWidth="600.0"
          stylesheets="@../css/register.css"
          xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.karstenbeck.fpa2.controller.AddRecordController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"
                           maxWidth="300.0"
                           minWidth="10.0"
                           prefWidth="107.0"/>
        <ColumnConstraints halignment="RIGHT"
                           hgrow="SOMETIMES"
                           maxWidth="300.0"
                           minWidth="10.0"
                           prefWidth="169.0"/>
        <ColumnConstraints hgrow="SOMETIMES"
                           maxWidth="280.0"
                           minWidth="0.0"
                           prefWidth="245.0"/>
        <ColumnConstraints hgrow="SOMETIMES"
                           maxWidth="124.0"
                           minWidth="0.0"
                           prefWidth="99.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="65.0"
                        minHeight="50.0"
                        prefHeight="70.0"
                        vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="97.0"
                        minHeight="50.0"
                        prefHeight="70.0"
                        vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="143.0"
                        minHeight="50.0"
                        prefHeight="70.0"
                        vgrow="SOMETIMES"/>
