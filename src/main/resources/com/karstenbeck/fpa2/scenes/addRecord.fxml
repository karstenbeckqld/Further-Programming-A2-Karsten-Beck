                   GridPane.rowIndex="5"/>
        <TextArea fx:id="comment"
                  prefHeight="200.0"
                  prefWidth="200.0"
                  GridPane.columnIndex="2"
                  GridPane.rowIndex="6"/>
        <Button fx:id="cancelBtn"
                mnemonicParsing="false"
                text="Cancel"
                GridPane.columnIndex="2"
                GridPane.rowIndex="7"/>
        <Button fx:id="confirmBtn"
                mnemonicParsing="false"
                text="Confirm"
                GridPane.columnIndex="3"
                GridPane.rowIndex="7"/>
        <Label fx:id="commentLabel"
               text=" Comment (max. 50 words)"
               GridPane.columnIndex="1"
               GridPane.rowIndex="6"/>
        <DatePicker fx:id="datePicker"
                    onAction="#getDate"
                    prefHeight="26.0"
                    prefWidth="225.0"
                    GridPane.columnIndex="2"/>
        <Label fx:id="errorMessage"
               alignment="CENTER"
               prefWidth="393.0"
               GridPane.columnIndex="1"
               GridPane.columnSpan="2"
               GridPane.rowIndex="8">
            <styleClass>
                <String fx:value="errorHidden"/>
                <String fx:value="errorVisible"/>
            </styleClass>
        </Label>
    </children>
