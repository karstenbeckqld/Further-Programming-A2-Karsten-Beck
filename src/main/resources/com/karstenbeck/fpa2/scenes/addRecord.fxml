        <RowConstraints maxHeight="203.0"
                        minHeight="50.0"
                        prefHeight="50.0"
                        vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="211.0"
                        minHeight="50.0"
                        prefHeight="50.0"
                        vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="231.0"
                        minHeight="80.0"
                        prefHeight="100.0"
                        vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="248.0"
                        minHeight="80.0"
                        prefHeight="80.0"
                        vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="248.0"
                        minHeight="50.0"
                        prefHeight="50.0"
                        vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label fx:id="dateLabel"
               text="Date"
               GridPane.columnIndex="1"/>
        <Label fx:id="timeLabel"
               text="Time"
               GridPane.columnIndex="1"
               GridPane.rowIndex="1"/>
        <Label fx:id="weightLabel"
               text="Weight"
               GridPane.columnIndex="1"
               GridPane.rowIndex="2"/>
        <Label fx:id="tempLabel"
               text="Temperature"
               GridPane.columnIndex="1"
               GridPane.rowIndex="3"/>
        <Label fx:id="sysBpLabel"
               text="systolic BP"
               GridPane.columnIndex="1"
               GridPane.rowIndex="4"/>
        <Label fx:id="diaBpLabel"
               text="diastoloc BP"
               GridPane.columnIndex="1"
               GridPane.rowIndex="5"/>
        <TextField fx:id="time"
                   prefWidth="190.0"
                   GridPane.columnIndex="2"
                   GridPane.rowIndex="1"/>
        <TextField fx:id="weight"
                   prefWidth="190.0"
                   GridPane.columnIndex="2"
                   GridPane.rowIndex="2"/>
        <TextField fx:id="temp"
                   prefWidth="190.0"
                   GridPane.columnIndex="2"
                   GridPane.rowIndex="3"/>
        <TextField fx:id="sysBp"
                   prefWidth="190.0"
                   GridPane.columnIndex="2"
                   GridPane.rowIndex="4"/>
