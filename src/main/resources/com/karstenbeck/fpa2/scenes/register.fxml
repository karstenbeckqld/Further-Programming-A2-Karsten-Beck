<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchorPane"
            prefHeight="900.0"
            prefWidth="400.0"
            styleClass="main"
            stylesheets="@../css/register.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.karstenbeck.fpa2.controller.RegistrationController">
    <children>
        <VBox prefHeight="900.0"
              prefWidth="400.0"
              spacing="10.0">
            <children>
                <HBox alignment="CENTER_LEFT"
                      prefHeight="100.0"
                      prefWidth="200.0">
                    <children>
                        <Button fx:id="backBtn"
                                mnemonicParsing="false"
                                prefHeight="24.0"
                                prefWidth="24.0"
                                styleClass="backButton">
                            <graphic>
                                <ImageView fitHeight="36.0"
                                           fitWidth="36.0"
                                           pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/arrow-back.png"/>

                                    </image>
                                </ImageView>

                            </graphic>
                        </Button>
                        <Label text="Back"
                               textFill="WHITE"/>
                    </children>
                </HBox>
                <HBox alignment="BOTTOM_CENTER"
                      prefHeight="100.0"
                      prefWidth="200.0">
                    <children>
                        <ImageView fx:id="image"
                                   fitHeight="150.0"
                                   fitWidth="150.0"
                                   pickOnBounds="true"
                                   preserveRatio="true">
                            <HBox.margin>
                                <Insets bottom="50.0"/>
                            </HBox.margin>
                        </ImageView>
                        <Button fx:id="loadImage"
                                mnemonicParsing="false"
                                onAction="#insertImageButtonPress"
                                styleClass="imageUpload"
                                text="Upload Image">
                            <HBox.margin>
                                <Insets bottom="50.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <Label styleClass="label"
                       text="Username"/>
                <TextField fx:id="userName"
                           prefWidth="300"
                           styleClass="input"/>

                <Label styleClass="label"
                       text="First Name"/>
                <TextField fx:id="firstName"
                           prefWidth="300"
                           styleClass="input"/>

                <Label styleClass="label"
                       text="Last Name"/>
                <TextField fx:id="lastName"
                           prefWidth="300"
                           styleClass="input"/>

                <Label styleClass="label"
                       text="Email"
                       textFill="WHITE"/>
                <TextField fx:id="email"
                           prefWidth="300.0"
                           styleClass="input"/>

                <Label styleClass="label"
                       text="Password"/>
                <PasswordField fx:id="password"
                               prefWidth="300"
                               styleClass="input"/>
                <Label styleClass="label"
                       text="Confirm Password"
                       textFill="WHITE"/>
                <PasswordField fx:id="confirmPassword"
                               prefWidth="300.0"
                               styleClass="input"/>
                <Label fx:id="registrationError"
                       alignment="CENTER"
                       prefHeight="30.0"
                       prefWidth="389.0"
                       text="Label"
                       textAlignment="CENTER"
                       textFill="#bf3030">
                    <!-- <font>
                         <Font size="18.0"/>
                     </font>-->
                    <styleClass>
                        <String fx:value="errorHidden"/>
                        <String fx:value="errorVisible"/>
                    </styleClass>
                    <opaqueInsets>
                        <Insets bottom="5.0"
                                left="5.0"
                                right="5.0"
                                top="5.0"/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER"
                      prefHeight="115.0"
                      prefWidth="400.0"
                      spacing="50.0">
                    <children>
                        <Button fx:id="cancel"
                                mnemonicParsing="false"
                                onAction="#cancelUserCreation"
                                prefWidth="100"
                                styleClass="cancel"
                                text="Cancel"/>

                        <Button fx:id="createUser"
                                mnemonicParsing="false"
                                onAction="#createUser"
                                prefWidth="100"
                                styleClass="confirm"
                                text="Confirm"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0"
                        left="20.0"
                        right="20.0"
                        top="20.0"/>
            </padding>
        </VBox>


    </children>
</AnchorPane>
