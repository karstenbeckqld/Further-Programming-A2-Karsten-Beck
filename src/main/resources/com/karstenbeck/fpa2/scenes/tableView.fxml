<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="670.0"
            prefWidth="1130.0"
            styleClass="container"
            stylesheets="@../css/userData.css"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.karstenbeck.fpa2.controller.TableDisplayController">
    <children>
        <AnchorPane prefHeight="670.0"
                    prefWidth="1100.0"
                    styleClass="main"
                    translateX="30.0">
            <children>
                <TableView id="tableView"
                           fx:id="tableView"
                           layoutX="246.0"
                           layoutY="37.0"
                           prefHeight="400.0"
                           prefWidth="800.0"
                           styleClass="table"
                           AnchorPane.bottomAnchor="40.0"
                           AnchorPane.leftAnchor="250.0"
                           AnchorPane.rightAnchor="40.0"
                           AnchorPane.topAnchor="40.0">
                    <columns>
                        <TableColumn id="date"
                                     fx:id="date"
                                     styleClass="table-col"
                                     text="Date"/>
                        <TableColumn id="time"
                                     fx:id="time"
                                     styleClass="table-col"
                                     text="Time"/>
                        <TableColumn id="weight"
                                     fx:id="weight"
                                     styleClass="table-col"
                                     text="Weight"/>
                        <TableColumn id="temp"
                                     fx:id="temp"
                                     styleClass="table-col"
                                     text="Temperature"/>
                        <TableColumn id="sysBp"
                                     fx:id="sysBp"
                                     styleClass="table-col"
                                     text="systolic BP"/>
                        <TableColumn id="diaBp"
                                     fx:id="diaBp"
                                     styleClass="table-col"
                                     text="diastolic BP"/>
                        <TableColumn id="comment"
                                     fx:id="comment"
                                     prefWidth="100.0"
                                     styleClass="table-col"
                                     text="Comment"/>
                        <TableColumn fx:id="buttons"
                                     prefWidth="228.0"/>
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
        <AnchorPane prefHeight="600.0"
                    prefWidth="230.0"
                    styleClass="menuPane"
                    translateY="35.0">
            <children>
                <VBox prefHeight="598.0"
                      prefWidth="228.0"
                      spacing="10.0"
                      styleClass="menu">
                    <children>
                        <ImageView fx:id="profileImage"
                                   fitHeight="150.0"
                                   fitWidth="150.0"
                                   pickOnBounds="true"
                                   preserveRatio="true"
                                   styleClass="profileImage">
                            <VBox.margin>
                                <Insets left="29.0"/>
                            </VBox.margin>
                        </ImageView>
                        <Button fx:id="edit"
                                mnemonicParsing="false"
                                onAction="#editPatientProfile"
                                prefHeight="50.0"
                                prefWidth="228.0"
                                styleClass="menuButton"
                                text="Edit Profile"
                                textAlignment="CENTER">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <Button fx:id="addRecord"
                                onAction="#addPatientRecord"
                                mnemonicParsing="false"
                                prefHeight="50.0"
                                prefWidth="228.0"
                                styleClass="menuButton"
                                text="Add Record">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <Button fx:id="exit"
                                mnemonicParsing="false"
                                prefHeight="50.0"
                                prefWidth="228.0"
                                styleClass="menuButton"
                                text="Sign Out"
                                translateY="240.0">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
