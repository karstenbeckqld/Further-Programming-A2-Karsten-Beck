<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane maxHeight="-Infinity"
          maxWidth="-Infinity"
          minHeight="-Infinity"
          minWidth="-Infinity"
          prefHeight="300.0"
          prefWidth="400.0"
          styleClass="start"
          stylesheets="@../css/login.css"
          xmlns="http://javafx.com/javafx/17.0.2-ea"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.karstenbeck.fpa2.controller.LoginController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"
                           maxWidth="159.0"
                           minWidth="10.0"
                           prefWidth="151.0"/>
        <ColumnConstraints hgrow="SOMETIMES"
                           maxWidth="240.0"
                           minWidth="10.0"
                           prefWidth="149.0"/>
        <ColumnConstraints hgrow="SOMETIMES"
                           maxWidth="240.0"
                           minWidth="10.0"
                           prefWidth="149.0"/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0"
                        prefHeight="30.0"
                        vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0"
                        prefHeight="30.0"
                        vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0"
                        prefHeight="30.0"
                        vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0"
                        prefHeight="30.0"
                        vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0"
                        prefHeight="30.0"
                        vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label alignment="CENTER"
               contentDisplay="CENTER"
               prefHeight="24.0"
               prefWidth="290.0"
               styleClass="welcome"
               text="Welcome to the MyHealth Application!"
               textAlignment="CENTER"
               GridPane.columnSpan="3"
               GridPane.halignment="CENTER">
            <font>
                <Font name="System Bold"
                      size="16.0"/>
            </font>
        </Label>
        <Label alignment="CENTER_RIGHT"
               text="Username"
               GridPane.columnIndex="0"
               GridPane.rowIndex="1"/>
        <Label alignment="CENTER_RIGHT"
               text="Password"
               GridPane.columnIndex="0"
               GridPane.rowIndex="2"/>
        <TextField fx:id="userName"
                   GridPane.columnIndex="1"
                   GridPane.columnSpan="2"
                   GridPane.rowIndex="1"/>
        <PasswordField fx:id="password"
                       GridPane.columnIndex="1"
                       GridPane.columnSpan="2"
                       GridPane.rowIndex="2"/>
        <Button fx:id="login"
                text="Login"
                styleClass="loginButton"
                GridPane.columnIndex="1"
                GridPane.rowIndex="3"/>
        <Button fx:id="register"
                onAction="#registerButtonClick"
                text="Register"
                styleClass="registerButton"
                GridPane.columnIndex="2"
                GridPane.rowIndex="3"/>
        <Label fx:id="loginMessage"
               alignment="CENTER"
               textAlignment="CENTER"
               wrapText="true"
               GridPane.columnIndex="1"
               GridPane.columnSpan="3"
               GridPane.rowIndex="4"/>
    </children>
    <padding>
        <Insets bottom="10.0"
                left="40.0"
                right="40.0"
                top="10.0"/>
    </padding>
</GridPane>
